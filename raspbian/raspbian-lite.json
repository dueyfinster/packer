{
    "variables": {
      "wifi_name": "",
      "wifi_password": "",
      "ssh_key_src": "{{env `HOME`}}/.ssh/id_personal.pub",
      "image_home_dir": "/home/pi",
      "home": "{{env `HOME`}}"
    },
    "builders": [{
      "type": "arm-image",
      "iso_url" : "https://downloads.raspberrypi.org/raspbian_lite/images/raspbian_lite-2020-02-14/2020-02-13-raspbian-buster-lite.zip",
      "iso_checksum_type":"sha256",
      "iso_checksum":"12ae6e17bf95b6ba83beca61e7394e7411b45eba7e6a520f434b0748ea7370e8",
      "last_partition_extra_size" : 1073741824
    }],  
    "provisioners": [
      {
        "type": "shell",
        "inline": [
          "mkdir {{user `image_home_dir`}}/.ssh"
        ]
      },
      {
        "type": "file",
        "source": "{{user `ssh_key_src`}}",
        "destination": "{{user `image_home_dir`}}/.ssh/authorized_keys"
      },
      {
        "type": "shell",
        "inline": ["touch /boot/ssh && chown pi:pi -R  {{user `image_home_dir`}}/.ssh"]
      },
      {
        "type": "shell",
        "inline": [
          "wpa_passphrase \"{{user `wifi_name`}}\" \"{{user `wifi_password`}}\" | sed -e 's/#.*$//' -e '/^$/d' >> /etc/wpa_supplicant/wpa_supplicant.conf"
          ]
      }
    ]
  }